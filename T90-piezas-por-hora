  <h2>Calculadora Proporcional de Piezas</h2>
  <div class="container">
    <label>¬øCu√°ntas piezas conoces?</label>
    <input type="number" id="piezasConocidas" placeholder="Ej: 14">

    <label>¬øCu√°nto miden esas piezas en total? (cm)</label>
    <input type="number" id="longitudConocida" placeholder="Ej: 84">

    <label>¬øCu√°nto mide la longitud mayor? (cm)</label>
    <input type="number" id="longitudMayor" placeholder="Ej: 150">

    <label>¬øCu√°ntas piezas usas por hora?</label>
    <input type="number" id="piezasPorHora" placeholder="Ej: 4">

    <button onclick="calcularProporcion()">Calcular</button>

    <div id="resultado"></div>
  </div>

  <script>
    function calcularProporcion() {
      const piezas = parseFloat(document.getElementById("piezasConocidas").value);
      const largo = parseFloat(document.getElementById("longitudConocida").value);
      const mayor = parseFloat(document.getElementById("longitudMayor").value);
      const porHora = parseFloat(document.getElementById("piezasPorHora").value);
      const resultado = document.getElementById("resultado");

      if (isNaN(piezas) || isNaN(largo) || isNaN(mayor) || piezas <= 0 || largo <= 0 || mayor <= 0) {
        resultado.innerHTML = "‚ö†Ô∏è Por favor ingresa valores v√°lidos mayores a 0.";
        return;
      }

      const piezasCalculadas = Math.floor((mayor * piezas) / largo);
      let horas = "‚Äî";
      if (!isNaN(porHora) && porHora > 0) {
        horas = Math.floor(piezasCalculadas / porHora);
      }

      resultado.innerHTML =
        `üîπ Puedes colocar <strong>${piezasCalculadas} piezas completas</strong><br><br>` +
        `‚è±Ô∏è Duraci√≥n estimada: <strong>${horas}</strong> horas usando <strong>${porHora || '‚Äî'}</strong> piezas por hora.`;
    }
  </script>
